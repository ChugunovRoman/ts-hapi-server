{
  "name": "ts-server",
  "version": "0.1.0",
  "description": "Using TypeScript on server",
  "main": "index.js",
  "author": "ChugunovRoman <Zebs-BMK@yandex.ru>",
  "license": "MIT",
  "scripts": {
    "start": "node ./build/index.js",
    "start:dev": "ts-node ./src/index.ts",
    "watch": "nodemon --watch build build/index.js",
    "watch:dev": "nodemon --exec ts-node ./src/index.ts",
    "build": "webpack --config ./config/webpack.config.js",
    "build:watch": "webpack --config ./config/webpack.config.js --watch",
    "lint": "tslint --config tslint.json './src/**/*.ts'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.1",
    "boom": "^7.1.0",
    "good": "^7.3.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.6.2",
    "hapi-auth-jwt2": "^7.3.0",
    "hapi-swagger": "^8.0.0",
    "joi": "^13.0.1",
    "jsonwebtoken": "^8.1.0",
    "mongoose": "^4.13.0",
    "nodemon": "^1.12.1",
    "yaml-config": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/boom": "^4.3.7",
    "@types/hapi": "^16.1.10",
    "@types/joi": "^10.4.4",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/mongoose": "^4.7.24",
    "@types/node": "^8.0.47",
    "awesome-typescript-loader": "^3.3.0",
    "fork-ts-checker-webpack-plugin": "^0.2.8",
    "ts-loader": "^3.1.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "webpack": "^3.8.1",
    "webpack-node-externals": "^1.6.0"
  }
}
