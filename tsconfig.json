{
    "compilerOptions": {
        "outDir": "./build",
        "noImplicitAny": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "typeRoots": ["node_modules/@types"],
        "allowJs": true
    },
    "include": [
        "src/**/**.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}